/* Buttons */
:root {
  --button-resets: {
    display: inline-block;
    cursor: pointer;
    white-space: nowrap;
  }
  --button-block: {
    width: 100%;
    display: block;
    margin-bottom: 2rem;

    &:first-child {
      margin-left: 0;
    }
  }
  --button-fixed: {
    width: auto;
    display: inline;
    margin: 0 0 2rem 1.6rem;
  }
}
